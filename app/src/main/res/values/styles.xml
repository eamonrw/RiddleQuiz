<resources>

    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDark</item>
        <item name="colorAccent">@color/blueAccent</item>
        <item name="colorButtonNormal">@color/blueButton</item>
        <item name="android:windowBackground">@color/blueBackground</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorButtonNormal">@color/darkButton</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#C0C0C0</item>
        <item name="android:editTextColor">#FFFFFF</item>
    </style>

    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="colorAccent">@color/redAccent</item>
        <item name="colorButtonNormal">@color/redButton</item>
        <item name="android:windowBackground">@color/redBackground</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenAccent</item>
        <item name="colorButtonNormal">@color/greenButton</item>
        <item name="android:windowBackground">@color/greenBackground</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/darkAccent</item>
    </style>

</resources>
